#!/usr/bin/env sloth

with (
  $cwd = $scriptDir,
  $env = $env.merge({'MAKEFILE_WARNINGS': ''}),
) {
  let cmd = ['echo']
  print(cmd)
  for arg in $argv {
    cmd.push(cmd)
    print("push ${arg}")
  }
  print(cmd)
  cmd! catch (e) do {
    print(e)
    # Make will print an error message
    exit(1)
  }
}
